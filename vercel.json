{
  "buildCommand": "cd server && npm install --include=dev && npx prisma generate && npx tsc && cd .. && npx vite build",
  "outputDirectory": "dist",
  "routes": [
    { "src": "/api/cron/(.*)", "dest": "/api/cron/$1" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/health", "dest": "/api" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/reminders",
      "schedule": "0 1 * * *"
    }
  ]
}
